<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/list_item_skill_exp_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/list_item_skill_title_text_view"
        android:layout_toLeftOf="@id/list_item_skill_exp_check_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Skill Name"/>

    <TextView
        android:id="@+id/list_item_skill_date_text_view"
        android:layout_toLeftOf="@id/list_item_skill_exp_check_box"
        android:layout_below="@id/list_item_skill_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        tools:text="Date Skill Added"/>
</RelativeLayout>